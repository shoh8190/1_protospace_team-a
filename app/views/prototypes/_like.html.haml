- if user_signed_in?
  - if prototype.like_user(current_user.id)
    = button_to prototype_like_path(prototype.like_user(current_user.id), prototype_id: prototype.id), method: :delete, id: "like-button", class: "btn btn-default", remote: true do
      = image_tag("icon_heart_red.svg" ,class: "heart" )
      LIKE
      %span#like-sum.num
        = prototype.likes_count
  - else
    = button_to prototype_likes_path(prototype), id: "like-button", class: "btn btn-default", remote: true do
      = image_tag("icon_heart.svg" ,class: "heart" )
      LIKE
      %span#like-sum.num
        = prototype.likes_count
- else
  = button_to new_user_session_path, id: "like-button", class: "btn btn-default" do
    = image_tag("icon_heart.svg" ,class: "heart" )
    LIKE
    %span#like-sum.num
      = prototype.likes_count
