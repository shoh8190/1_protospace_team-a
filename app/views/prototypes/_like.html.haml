- if user_signed_in?
  .likes_box
    - if prototype.like_user(current_user.id)
      = button_to prototype_like_path(like, prototype_id: prototype.id), method: :delete, id: "like-button", class: "btn btn-default", remote: true do
        = image_tag("icon_heart_red.svg" ,class: "heart" )
        LIKE
        %span#like-sum.num
          = prototype.like_count
    - else
      = button_to prototype_likes_path(prototype), id: "like-button", class: "btn btn-default", remote: true do
        = image_tag("icon_heart.svg" ,class: "heart" )
        LIKE
        %span#like-sum.num
          = prototype.like_count
- else
  .likes_box
    = image_tag("icon_heart.svg" ,class: "heart" )
    LIKE
    %span#like-sum.num
      = prototype.like_count
